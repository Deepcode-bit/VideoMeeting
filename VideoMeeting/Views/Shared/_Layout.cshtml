<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VideoMeeting</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://unpkg.com/layui@2.6.4/dist/css/layui.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    @await RenderSectionAsync("Style", required: false)
</head>
<body>
    <div class="page-header">
            <img src="~/images/brand.jpg" />
            <h4>基于WebRtc的视频会议应用</h4>
            <ul class="nav nav-pills">
                <li role="presentation">
                    <a href="#">
                        <div class="icon-but">
                            <span class="glyphicon glyphicon-plus">
                            </span>加入会议
                        </div>
                    </a>
                </li>
                <li role="presentation">
                    <a><div class="icon-but"><span class="glyphicon glyphicon-user"></span>召开会议</div></a>
                </li>
                <li role="presentation">
                    <a><div class="icon-but"><span class="glyphicon glyphicon-calendar"></span>预约会议</div>
                </li>
            </ul>
        </div>
    <div class="flex-box">
    <ul class="layui-nav layui-nav-tree layui-bg-blue" lay-filter="test">
            <a></a>
            <li class="layui-nav-item"><a href="">查看会议</a></li>
            <li class="layui-nav-item">
                <a href="javascript:;">云文件</a>
                <dl class="layui-nav-child">
                    <dd><a href="javascript:;">上传文件</a></dd>
                    <dd><a href="javascript:;">全部文件</a></dd>
                    <dd><a href="javascript:;">我的文件</a></dd>
                </dl>
            </li>
            <li class="layui-nav-item">
                <a href="javascript:;">团队管理</a>
                <dl class="layui-nav-child">
                    <dd><a href="javascript:;">移动模块</a></dd>
                    <dd><a href="javascript:;">后台模版</a></dd>
                    <dd><a href="javascript:;">电商平台</a></dd>
                </dl>
            </li>
        </ul>
      <div class="main-box">
        <main role="main" class="pb-3">
           @RenderBody()
        </main>
      </div>
    </div>
    <script src="https://unpkg.com/layui@2.6.4/dist/layui.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
